<Page x:Class="Control7.View.Pages.AddEmployeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Control7.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="950"
      Title="AddEmployeePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="100" />
            <RowDefinition Height="110" />
            <RowDefinition Height="130" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>
        <Image Source="/Resources/SK.png" Stretch="Fill" Grid.RowSpan   ="6"/>

        <TextBlock Text="Введите сотрудника" FontSize="40" Grid.Row="1" Margin="150 20" />
        <TextBox Name ="EmployeeTb" Grid.Row="2" Width="400" Height="60" />
        <Button x:Name="AddBtn" Click="AddBtn_Click"  Content="Добавить" Width="250" Height="50" FontSize="30" Grid.Row="3" Margin="425,37,275,36"  />
    </Grid>
</Page>
